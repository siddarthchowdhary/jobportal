	   <script>
	    $("#btn1").click(function ()
	     {
		$("#actionValue").val('1');
    		      $("#comp").show();
		      $("#loc").hide();
		      $("#cat").hide();
	     });
	    $("#btn2").click(function ()
	     {
               $("#actionValue").val('2');
		
    		      $("#comp").hide();
		      $("#loc").show();
		      $("#cat").hide();
	     });
	   $("#btn3").click(function ()
	     {
		$("#actionValue").val('3');
    		      $("#comp").hide();
		      $("#loc").hide();
		      $("#cat").show();
	     });
		
	    $("#btn").click(function ()
		{
		   var str=$("#myform").serialize();
		     $.ajax({
			url:"indexMain.php?controller=addjobhome&function=update",
			data:str,
			type:"POST",
			success:function (data)
			 {
			  alert(data);
			 }
		      });
		});
	</script>
	
